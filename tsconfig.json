{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["node"],
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "declaration": true,
    "experimentalDecorators": true,
  }
}
