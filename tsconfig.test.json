{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "declaration": true,
    "experimentalDecorators": true,
  },
  "include": [
    "test/**/*"
  ]
}
